{
  "include": ["src", "types"],
  "exclude": ["**/node_modules"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "checkJs": true,
    "allowJs": true,
    "incremental": true,
    "emit": false,
    "esModuleInterop": true
  }
}
